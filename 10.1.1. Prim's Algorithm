#include<stdio.h>
#include<conio.h>
#define MAX 20
int cost[MAX][MAX], n, e, i, j, s, d, w;
void prims() {
	int visited[MAX] = {0};
	int edge_count = 0;
	int min, a = -1, b = -1;
	int total_cost = 0;
	visited[1] = 1;
	while (edge_count < n - 1) {
		min = 999;
	for (i = 1; i <= n; i++) {
		if (visited[i]) {
			for (j = 1; j <= n; j++) {
				if (!visited[j] && cost[i][j] < min) {
					min = cost[i][j];
					a = i;
					b = j;
				}
			}
		}
	}
		if (a != -1 && b != -1) {
			printf("Edge cost from %d to %d : %d\n", a, b, cost[a][b]);
		total_cost += cost[a][b];
		visited[b] = 1;
		edge_count++;
		cost[a][b] = cost[b][a] = 999;
	} else {
		break;
	}
		a = b = -1;
	}
	printf("Minimum cost of spanning tree = %d\n", total_cost);
}
}
