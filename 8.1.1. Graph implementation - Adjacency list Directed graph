#include <stdio.h>
#include <stdlib.h>
#define MAX 100
typedef struct node {
	struct node *next;
	int vertex;
} *GNODE;
GNODE graph[MAX] = {NULL};

void print(int *n);
void insertVertex(int *n);
void insertEdge(int *n);
void deleteVertex(int *n);
void deleteEdge(int *n);

void print(int * N) {
	int i;
	for(i=1; i<= *N; i++) {
		if(graph[i] != NULL) {
			printf("%d=>", i);
			GNODE temp = graph[i];
			while(temp != NULL) {
			printf("%d\t", temp->vertex);				temp = temp->next;
			}
			printf("\n");
		}
	}
}

void insertVertex(int *n) {
	(*n)++;
	graph[*n] = NULL;
	printf("Vertex inserted: %d\n", *n);
}

void insertEdge(int *n) {
}
